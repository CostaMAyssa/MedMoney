{
  "version": 2,
  "name": "medmoney-webhook",
  "builds": [
    { "src": "webhook_handler.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/health", "dest": "webhook_handler.js" },
    { "src": "/api/webhook/asaas", "dest": "webhook_handler.js" },
    { "src": "/api/create-customer", "dest": "webhook_handler.js" },
    { "src": "/api/create-payment", "dest": "webhook_handler.js" },
    { "src": "/api/create-subscription", "dest": "webhook_handler.js" },
    { "src": "/api/subscription/(.*)/pix", "dest": "webhook_handler.js" },
    { "src": "/(.*)", "dest": "webhook_handler.js" }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_SERVICE_ROLE_KEY": "@supabase_service_role_key",
    "ASAAS_API_KEY": "@asaas_api_key",
    "ASAAS_API_URL": "@asaas_api_url",
    "NODE_ENV": "production"
  }
} 